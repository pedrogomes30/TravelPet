<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlller.perfil.passageiro.ui.viagem.ViagemFragment">

    <include layout="@layout/content_viagem" />

    <LinearLayout
        android:id="@+id/linear_origem_destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_round"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/editOrigem"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/circulo_verde_local_viagem"
            android:drawablePadding="6dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/seu_local_atual_ou_digite_um_local_de_origem"
            android:inputType="textPersonName"
            android:textColor="@color/colorApp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editDestino"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/circulo_verde_local_viagem"
            android:drawablePadding="6dp"
            android:drawableTint="@android:color/darker_gray"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/digite_o_local_de_destino"
            android:inputType="textPersonName"
            android:textColor="@color/colorApp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonChamarMotorista"
        style="@style/Fonte_botao_azul"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_laranja_seletor"
        android:text="@string/nova_viagem"
        android:textStyle="bold" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>