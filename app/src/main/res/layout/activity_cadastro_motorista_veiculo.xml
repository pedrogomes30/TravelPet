<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorApp"
    tools:context=".controlller.cadastro.cadastroMotorista.CadastroMotoristaVeiculoActivity">

    <TextView
        android:id="@+id/tvBoasVindasVeiculo"
        style="@style/Fontetitulo"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/por_favor_preencha_os_campos_com_os_dados_de_seu_veiculo"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tiModeloVeiculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiModeloVeiculo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_branco_seletor"
        app:layout_constraintBottom_toTopOf="@+id/tiMarcaVeiculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBoasVindasVeiculo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etModeloVeiculo"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/modelo_do_veiculo"
            android:maxLength="15"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiMarcaVeiculo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_branco_seletor"
        app:layout_constraintBottom_toTopOf="@+id/tiAnoVeiculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiModeloVeiculo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMarcaVeiculo"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/marca_do_ve_culo"
            android:maxLength="15"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiAnoVeiculo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_branco_seletor"
        app:layout_constraintBottom_toTopOf="@+id/tiPlacaVeiculo"
        app:layout_constraintEnd_toEndOf="@+id/tiMarcaVeiculo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tiMarcaVeiculo"
        app:layout_constraintTop_toBottomOf="@+id/tiMarcaVeiculo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAnoVeiculo"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ano_ve_culo"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiPlacaVeiculo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_branco_seletor"
        app:layout_constraintBottom_toTopOf="@+id/tiCRLVveiculo"
        app:layout_constraintEnd_toEndOf="@+id/tiMarcaVeiculo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tiMarcaVeiculo"
        app:layout_constraintTop_toBottomOf="@+id/tiAnoVeiculo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPlacaVeiculo"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placa_do_ve_culo"
            android:maxLength="7"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiCRLVveiculo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_branco_seletor"
        app:layout_constraintBottom_toTopOf="@+id/btProximoVeiculo"
        app:layout_constraintEnd_toEndOf="@+id/tiMarcaVeiculo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tiMarcaVeiculo"
        app:layout_constraintTop_toBottomOf="@+id/tiPlacaVeiculo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCRLVveiculo"
            style="@style/Fonte_memor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/crlv_do_ve_culo"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btProximoVeiculo"
        style="@style/Fonte_botao_azul"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:layout_weight="1"
        android:background="@drawable/button_azul_seletor"
        android:text="@string/proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>