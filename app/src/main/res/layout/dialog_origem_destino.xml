<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/colorApp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitação de Viagem"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/fredoka_one_regular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço de Origem "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_ruaOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rua Origem"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_numeroOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número Origem"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_bairroOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bairro Origem"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_cidadeOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade Origem"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_estadoOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado Origem"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_cepOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cep Origem"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço de Destino "
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_ruaDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rua Destino"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_numeroDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número Destino"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_bairroDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bairro Destino"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_cidadeDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade Destino"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_estadoDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado Destino"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_cepDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cep Destino"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_confirmDialog_origemDestino"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Confirmar"
                android:layout_margin="4dp"
                android:background="@drawable/button_verde_seletor"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/bt_cancelDialog_origemDestino"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancelar"
                android:layout_margin="4dp"
                android:background="@drawable/button_vermelho_seletor"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

