<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorApp"
    tools:context=".controlller.cadastro.CadastroUsuarioTipoActivity">

    <TextView
        android:id="@+id/tvBoasVindasVeiculo"
        style="@style/Fontetitulo"
        android:layout_width="366dp"
        android:layout_height="171dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/qual_tipo_de_usuario_voc_pretende_ser"
        app:layout_constraintBottom_toTopOf="@+id/botaoPassageiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/botaoPassageiro"
        style="@style/Fonte_botao_azul"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_azul_seletor"
        android:onClick="botaoPassageiro"
        android:text="@string/passageiro"
        app:layout_constraintBottom_toTopOf="@+id/botaoMotorista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBoasVindasVeiculo" />

    <Button
        android:id="@+id/botaoMotorista"
        style="@style/Fonte_botao_azul"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_azul_seletor"
        android:onClick="botaoMotorista"
        android:text="@string/motorista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoPassageiro" />
</androidx.constraintlayout.widget.ConstraintLayout>